        <div style="text-align: right;">
        <?php
        if (!empty($_POST['height'])) {
            $input = $_POST['height'];
            if ($input >= 1 && $input <= 15) {
                for ($i = 0; $i < $input; $i++) {
                    for ($x = 0; $x < $i + 2; $x++) {
                        echo "#";
                    }
                    echo "<br>";
                }
            } else {
                echo "<span style='color: red;'>Висота задана неправильно! Будь ласка, введіть правильну кількість рядків!</span>";
            }
        }
        ?>
